<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="alert alert-danger offset-2 col-8" role="alert">
            <h4 class="alert-heading">
                Error <%= err.statusCode %>
            </h4>
            <hr>
            <p>
                <%= err.message %>
                    <br>
                    <% if (process.env.NODE_ENV !== "production") { %>
                    <%= err.stack %>
                    <% } %>
            </p>
        </div>
    </div>