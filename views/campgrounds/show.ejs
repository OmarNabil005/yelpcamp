<% layout('layouts/boilerplate') %>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <img src="<%= campground.image %>" alt="campground image">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <h6>
                            <%= campground.location %>
                        </h6>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Price: <%= campground.price %>$</li>
                        <li class="list-group-item">Added by: <%= campground.author.username %>
                        </li>
                    </ul>
                    <% if (currentUser && campground.author.equals(currentUser._id)) { %>
                        <div class="card-body">
                            <a href="/campgrounds/<%=campground._id%>/edit" class="card-link"><button
                                    class="btn btn-secondary">Edit</button></a>
                            <form class="card-link d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
            <div class="col-6">
                <form action="/campgrounds/<%=campground._id%>/reviews" method="post" class="needs-validation"
                    novalidate>
                    <h3>Leave a Review</h3>
                    <div class="mb-1 col-6">
                        <label for="customRange3" class="form-label">Rating</label>
                        <input type="range" class="form-range" min="0" max="5" step="0.5" id="customRange3"
                            name="review[rating]" required>
                    </div>
                    <div class="input-group mb-3">
                        <textarea class="form-control" name="review[text]" cols="30" rows="3"
                            placeholder="Write your review" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a Review.
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <button class="btn btn-primary">Submit</button>
                    </div>
                </form>
                <% if (campground.reviews.length> 0) { %>
                    <h3 class="mt-3">Reviews</h3>
                    <% } %>
                        <% for (let review of campground.reviews) { %>
                            <div class="card mb-3">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        Rating: <%= review.rating %>
                                    </li>
                                    <li class="list-group-item">
                                        Review: <%= review.text %>
                                    </li>

                                    <li class="list-group-item">
                                        Author: <%= review.author.username %>
                                    </li>
                                </ul>
                                <% if (currentUser && review.author.equals(currentUser._id)) { %>

                                    <div class="card-footer">
                                        <form class="card-link d-inline"
                                            action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>
    <script src="/scripts/validateForms.js"></script>